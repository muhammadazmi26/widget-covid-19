<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:paddingBottom="3pt"
        android:paddingTop="4pt"
        android:background="#141111"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <!-- judul-->
        <RelativeLayout
            android:paddingStart="4pt"
            android:paddingEnd="4pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/appwidget_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#00a5ff"
                android:textAllCaps="true"
                android:textSize="6pt"
                android:text="DATA COVID 19" />

            <ImageView
                android:id="@+id/tombol"
                android:layout_alignParentEnd="true"
                android:layout_gravity="fill_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:src="@drawable/ic_refresh_black_24dp" />

        </RelativeLayout>

        <!-- confirmed, recovered, deadth-->
        <LinearLayout
            android:layout_gravity="fill_horizontal"
            android:paddingStart="2pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--CONFIRMED-->
            <LinearLayout
                android:paddingRight="5pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    android:src="@drawable/ic_trending_up" />

                <TextView
                    android:id="@+id/confirmed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:textSize="6pt"
                    android:paddingTop="1.2pt"
                    android:text="CONFIRMED" />

            </LinearLayout>

            <!--RECOVERED-->
            <LinearLayout
                android:paddingRight="5pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    android:src="@drawable/ic_trending_down" />

                <TextView
                    android:id="@+id/recovered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:paddingTop="1.2pt"
                    android:textSize="6pt"
                    android:text="RECOVERED" />

            </LinearLayout>

            <!--DEADTH-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    android:src="@drawable/ic_dead" />

                <TextView
                    android:id="@+id/deaths"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="1.2pt"
                    android:textColor="#FFF"
                    android:textSize="6pt"
                    android:text="DEADTH" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>